<view class='flex-row flex-center'>

  <view class='catitem flex-1 ' wx:key="k" bindtap='bindcontact'>
    <view class=' text-center padding-20 txt-gray {{ctt==1?"to-white":"" }} top text-center h5' bindtap='bindcontact'>热门诗词</view>
  </view>

  <view class='catitem flex-1 ' wx:key="k" bindtap='bindwaitcompleted'>
    <view class=' text-center padding-20 txt-gray {{ctt==2?"to-white":""}} top text-center h5' bindtap='bindwaitcompleted'>每日必读</view>
  </view>

  <view class='catitem flex-1 ' wx:key="k" bindtap='bindcompleted'>
    <view class=' text-center padding-20 txt-gray {{ctt==3?"to-white":""}} top text-center h5' bindtap='bindcompleted'>最新录入</view>
  </view>

</view>


<view>
