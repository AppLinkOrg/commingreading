<!--pages/mytalkdetails/mytalkdetails.wxml-->

<image class='img' mode='scaleToFill' src='{{uploadpath}}resource/{{res.bg_2}}'></image>

<view>
  <view class='flex-row flex-column padding-40' style=''>
    <view class='txt-black h4'>《{{bookinfo.book_name}}》</view>
    <view class='txt-black margin-top-10'>作者：{{bookinfo.author}}</view>
    <view class='txt-black margin-top-10'>朗读者:xxx</view>

    <scroll-view scroll-y class='text-center ' style='height:450rpx;'>
      <text class='content txt-black text-center margin-bottom-40'>
{{bookinfo.book_content}}
</text>
    </scroll-view>

  </view>


  <view class='padding-30 txt-black txt-bold  bg-white '>
    朗读者({{readlist.length}})：
  </view>

  <view wx:if='{{readlist.length==0}}' class='bg-white  flex-row flex-column'>

    <image class='icon-100' src='{{uploadpath}}resource/{{res.noreader_icon}}'></image>
    <view class='h5 txt-gray txt-bold margin-top-10 padding-bottom-30'>还没有人朗读哦，快来体验一下吧</view>
  </view>

  <navigator url='/pages/others/others?readid={{item.id}}'  wx:if='{{readlist.length>0}}' class='flex-row flex-center pinlun  bg-white ' wx:for='{{readlist}}' wx:key='k' wx:for-index='idx' style='border-bottom:1rpx solid #F3F3F3;'>
    <navigator  class=''>
      <image class='icon-30 take' src='{{uploadpath}}resource/{{res.touxiangluyin}}'></image>
      <image class='icon-50' src='{{item.member_avatarUrl}}'></image>
    </navigator>

    <view class='margin-left-20  flex-1'>


      <view class='flex-row flex-center'>

        <view class='flex-1 '>{{item.member_id_name}}</view>

        <view class=' flex-row flex-center margin-left-10'>
          <image class='icon-25' src='{{uploadpath}}resource/{{res.dianzangray}}'></image>
          <view class='margin-left-10'>{{item.count1}}</view>
        </view>

        <view class=' flex-row flex-center margin-left-10'>
          <image class='icon-25' src='{{uploadpath}}resource/{{res.shouting}}'></image>
          <view class='margin-left-10'>{{item.lstcount}}</view>
        </view>

      </view>

      <view class=' txt-gray margin-top-20'>{{item.created_date}}</view>


    </view>

  </navigator>


  <navigator url='/pages/readaloud/readaloud?id={{bookinfo.id}}' class='flex-row flex-column mid' style='background-color:#F3F3F3'>
    <view class='padding-20 flex-row flex-center' style=''>
      <image class='icon-30' src='{{uploadpath}}resource/{{res.woyaolangdu}}'></image>
      <view class='txt-bold'>我要朗读</view>
    </view>
  </navigator>
</view>