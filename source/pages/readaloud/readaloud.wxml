<!--pages/readaloud/readaloud.wxml-->
<image class='img' mode='scaleToFill' src='{{uploadpath}}resource/{{res.bg_2}}'></image>

<view >
<view class='flex-row flex-column padding-40' style=''>
  <view class='txt-black h4'>《{{bookinfo.book_name}}》</view>
  <view class='txt-black margin-top-10'>作者：{{bookinfo.author}}</view>
  <view  class='txt-black margin-top-10'>朗读者:xxx</view>
<scroll-view scroll-y class='text-center '	 style='height:550rpx;'>
  <text class='content txt-black text-center margin-bottom-40'>
{{bookinfo.book_content}}
</text>

</scroll-view>

</view>

<view class='flex-row flex-column mid padding-top-20 bg-white' style='border-top:1rpx solid #E8E8E8'>
  <view>00'00"</view>


  <view class='flex-row flex-center'>
    <view class='text-center ' hover-class='bg-primary txt-white' style='width:120rpx;border:1rpx solid #79C8C0;border-radius:10rpx'>重录</view>

    <view class='text-center' style='width:300rpx;'>
      <image class='icon-40' bindtap='begin' src='{{uploadpath}}resource/{{res.luyin}}'></image>
    </view>

    <navigator  bindtap='submit' class='text-center ' id='{{bookinfo.id}}' hover-class='bg-primary txt-white' style='width:120rpx;border:1rpx solid #79C8C0;border-radius:10rpx'>提交</navigator>
  </view>


  <view class='h5' >点击开始录音</view>

</view>

<view class='bgm' bindtap='cutmusic'>
<image class='icon-30' src='{{uploadpath}}resource/{{res.xuanzeyinyue}}'></image>
</view>
</view>
